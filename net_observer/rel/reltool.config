%% -*- mode: erlang -*-
%% ex: ft=erlang
{sys, [{lib_dirs, ["../apps", "../../deps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "net_observer", "1",
        [stdlib,      
         kernel,      
         sasl,        
         syntax_tools,
         compiler,    
         crypto,      
         ranch,       
         cowlib,      
         cowboy,      
         ibrowse,     
         jiffy,       
         goldrush,
         lager,       
         meck,        
         recon,
         ofs_handler,
         of_driver,
         grapher,     
         net_observer
        ]},
       {rel, "start_clean", "",
        [kernel,
         stdlib
        ]},
       {boot_rel, "net_observer"},
       {profile, embedded},
       {incl_cond, derived},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/(?!start_clean.boot)",
                           "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
    
        {app, stdlib,       [{incl_cond, include}]},
        {app, kernel,       [{incl_cond, include}]},
        {app, sasl,         [{mod_cond, app}, {incl_cond, include}]},
        {app, syntax_tools, [{mod_cond, app}, {incl_cond, include}]},
        {app, compiler,     [{mod_cond, app}, {incl_cond, include}]},
        {app, crypto,       [{mod_cond, app}, {incl_cond, include}]},
        {app, ranch,        [{mod_cond, app}, {incl_cond, include}]},
        {app, cowlib,       [{mod_cond, app}, {incl_cond, include}]},
        {app, cowboy,       [{mod_cond, app}, {incl_cond, include}]},
        {app, ibrowse,      [{mod_cond, app}, {incl_cond, include}]},
        {app, jiffy,        [{mod_cond, app}, {incl_cond, include}]},
        {app, goldrush,        [{mod_cond, app}, {incl_cond, include}]},
        {app, lager,        [{mod_cond, app}, {incl_cond, include}]},
        {app, meck,         [{mod_cond, app}, {incl_cond, include}]},
        {app, recon,        [{mod_cond, app}, {incl_cond, include}]},
        {app, ofs_handler,  [{mod_cond, app}, {incl_cond, include}]},
        {app, of_driver,    [{mod_cond, app}, {incl_cond, include}]},
        {app, grapher,      [{mod_cond, app}, {incl_cond, include}]},
        {app, net_observer, [{mod_cond, app}, {incl_cond, include}]}
      ]}.
{target_dir, "net_observer"}.
{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "net_observer/bin/start_clean.boot",
                  "\{\{erts_vsn\}\}/bin/start_clean.boot"},
           {copy, "files/net_observer", "bin/net_observer"},
           {copy, "files/net_observer.cmd", "bin/net_observer.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
