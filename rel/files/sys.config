[
 {of_driver, [
              {listen_port, 6633},
              {of_compatible_versions, [4]},
              {callback_module, ofs_handler_driver},
              {init_opt, [
                          {callback_module, simple_ne_ofsh},
                          {init_opt, []}
              ]}
 ]},
 %% SASL config
